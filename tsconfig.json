{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2015",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "lib": [
      "webworker",
      "es6",
      "scripthost",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "exclude": [
    "node_modules"
  ]
}